@model Activity

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageURl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Teacher</h3>
            <h3>
                <a asp-controller="Activity" asp-action="Details" asp-route-id="@Model.ActivityId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
    </div>
</div>